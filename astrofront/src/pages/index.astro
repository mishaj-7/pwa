---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home">
  <main>
    <h1>Welcome to Our PWA Store</h1>
    <p>Browse our catalog, add items to your cart, and enjoy shopping!</p>
    <nav>
      <a href="/catalog">View Catalog</a>
      <a href="/cart">View Cart</a>
    </nav>
  </main>
</Layout>

<style>
  main {
    text-align: center;
    padding: 2em;
  }
  nav {
    margin-top: 2em;
  }
  nav a {
    margin: 0 1em;
    padding: 0.5em 1em;
    background-color: #0077cc;
    color: white;
    text-decoration: none;
    border-radius: 4px;
  }
</style>